<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <item name="android:textColorPrimary">@color/textColorPrimary</item>
    </style>

    <style name="AppTheme.ToolBat" parent="Widget.MaterialComponents.Toolbar">
        <item name="android:background">@color/homeBackgroundColor</item>
        <item name="android:theme">@style/AppTheme</item>
        <item name="popupTheme">@style/ThemeOverlay.MaterialComponents.Light</item>
        <item name="titleTextAppearance">@style/TextAppearance.AppTheme.TitleToolbar</item>
    </style>

    <style name="TextAppearance.AppTheme.TitleToolbar" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:textSize">16sp</item>
        <item name="textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.AppTheme.Title" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppTheme.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="hintTextAppearance">@style/TextAppearance.AppTheme.TextInputLayout.HintText</item>
        <item name="hintTextColor">@color/textInputOutlineColor</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <item name="boxStrokeColor">@color/textInputOutlineColor</item>
    </style>

    <style name="AppTheme.TextInputLayout.ExposedDropdown" parent="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu">
        <item name="hintTextAppearance">@style/TextAppearance.AppTheme.TextInputLayout.HintText</item>
        <item name="hintTextColor">@color/textInputOutlineColor</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <item name="boxStrokeColor">@color/textInputOutlineColor</item>
    </style>

    <style name="TextAppearance.AppTheme.TextInputLayout.HintText" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>

    <style name="AppTheme.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@android:color/white</item>
        <item name="backgroundTint">@color/textInputOutlineColor</item>
        <item name="android:layout_height">50dp</item>
        <item name="cornerRadius">20dp</item>
        <item name="android:elevation">8dp</item>
    </style>

    <style name="AppTheme.Button.TextButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/textInputOutlineColor</item>
        <item name="android:layout_height">50dp</item>
    </style>


    <style name="TextAppearance.AppTheme.Dialog.body" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textAlignment">textStart</item>
    </style>

    <style name="ThemeOverlay.AppTheme.Dialog" parent="ThemeOverlay.MaterialComponents.Dialog">
        <item name="buttonBarPositiveButtonStyle">@style/Widget.AppTheme.Button.TextButton.Dialog</item>
        <item name="buttonBarNegativeButtonStyle">@style/Widget.AppTheme.Button.TextButton.Dialog</item>
    </style>

    <style name="Widget.AppTheme.Button.TextButton.Dialog" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/textInputOutlineColor</item>
    </style>

</resources>
